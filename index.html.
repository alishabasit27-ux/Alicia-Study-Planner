    <script>
        // Load Goals from LocalStorage
        let goals = JSON.parse(localStorage.getItem('userGoals')) || [];

        function addGoal() {
            const input = document.getElementById('goalInput');
            if (input.value === "") return;

            goals.push(input.value);
            localStorage.setItem('userGoals', JSON.stringify(goals));
            input.value = "";
            renderGoals();
        }

        function renderGoals() {
            const list = document.getElementById('goalList');
            const guide = document.getElementById('studyGuide');
            
            list.innerHTML = goals.map((g, i) => `
                <li style="margin-bottom: 10px;">
                    <input type="checkbox"> ${g}
                </li>
            `).join('');

            // Dynamic Study Guide Logic
            if (goals.length > 0) {
                const latestGoal = goals[goals.length - 1].toLowerCase();
                if (latestGoal.includes("math") || latestGoal.includes("mth")) {
                    guide.innerHTML = "<strong>Guide:</strong> Practice 5 problems daily and review formulas before bed.";
                } else if (latestGoal.includes("code") || latestGoal.includes("cs")) {
                    guide.innerHTML = "<strong>Guide:</strong> Build one small function today. Check for syntax errors in your C++ loops.";
                } else {
                    guide.innerHTML = "<strong>Guide:</strong> Break this goal into 3 small tasks and use the 25-minute timer.";
                }
            }
        }

        // Initialize
        renderGoals();
    </script>
